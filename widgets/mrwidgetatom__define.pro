    self._func_get_value   = ptr_new(/ALLOCATE_HEAP)
    self._kill_notify      = ptr_new(/ALLOCATE_HEAP)
    self._notify_realize   = ptr_new(/ALLOCATE_HEAP)
    self._pro_set_value    = ptr_new(/ALLOCATE_HEAP)
    
